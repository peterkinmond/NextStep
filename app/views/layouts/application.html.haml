!!!
%html
  %head
    %title= title
    = render 'layouts/stylesheets'
    = javascript_include_tag :defaults
    = javascript_include_tag "jquery.hotkeys", "jquery.watermark", 'jquery-ui-1.8.16.custom.min'
    = csrf_meta_tag
  %body
    = render 'layouts/header'

    .container
      .hero-unit
        - flash.each do |key, value|
          %div{:class => "alert-message #{key}"}= value
        = yield