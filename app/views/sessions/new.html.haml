%div.sign-in
  = form_for(:session, :url => sessions_path, :html => { :class => 'form-stacked' }) do |f|
    %fieldset
      %legend= @title
      .clearfix
        = f.label :email
        = f.text_field :email, :autofocus => true
      .clearfix
        = f.label :password
        = f.password_field :password
      = f.submit "Sign in", :class => "btn primary"
    %h3 New user? #{link_to "Sign up", signup_path}

